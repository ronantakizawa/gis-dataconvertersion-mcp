{
    "compilerOptions": {
      "target": "ES2019",
      "module": "Node16",
      "moduleResolution": "Node16",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "noImplicitAny": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }